<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/MW_Since_1918.png</argument>
                <argument name="logo_img_width" xsi:type="number">432</argument>
                <argument name="logo_img_height" xsi:type="number">113</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="header-wrapper">
            <container name="header-cart-account" as="header-cart-account" label="Header Card and Account Container" htmlTag="div" htmlClass="header-cart-account" />
        </referenceContainer>
        <move element="top.search" destination="header-wrapper" after="logo" />
        <move element="header.panel" destination="header-cart-account" />
        <move element="minicart" destination="header-cart-account" after="header.panel" />
        <referenceContainer name="header.panel" htmlClass="header-account-links-wrapper">
            <block class="Magento\Framework\View\Element\Template" name="header-account-links-label" template="Magento_Theme::header_account_links_label.phtml" after="skip_to_content"/>
        </referenceContainer>
    </body>
</page>