<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Lero9\WordpressPostTabs\Block\Adminhtml\Tab\Edit" name="wordpress_post_tab_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Lero9\WordpressPostTabs\Block\Adminhtml\Tab\Edit\Tabs" name="wordpress_post_tab_edit_tabs">
                <block class="Lero9\WordpressPostTabs\Block\Adminhtml\Tab\Edit\Tab\Main" name="wordpress_post_tab_edit_tab_main"/>
                <block class="Lero9\WordpressPostTabs\Block\Adminhtml\Tab\Edit\Tab\Posts" name="wordpress_post_tab_edit_tab_posts"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">main_section</argument>
                    <argument name="block" xsi:type="string">wordpress_post_tab_edit_tab_main</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">posts_section</argument>
                    <argument name="block" xsi:type="string">wordpress_post_tab_edit_tab_posts</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>